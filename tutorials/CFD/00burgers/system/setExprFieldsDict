FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      setExprFieldsDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //


expressions
(
    U
    {
        field       U;
        dimensions      [0 1 -1 0 0 0 0];

        eps 0.0001;

        condition
        #{
            // left-bottom quarter [0,0.5]x[0,0.5] of the domain [0,1]x[0,1]
            (pos().x() < 0.5 + $eps) && (pos().y() < 0.5 + $eps)
        #};

        expression
        #{
            vector
            (
            sin(2*pi()*pos().x())*sin(2*pi()*pos().y()),
            sin(2*pi()*pos().x())*sin(2*pi()*pos().y()),
            0
            )
        #};
    }
);


