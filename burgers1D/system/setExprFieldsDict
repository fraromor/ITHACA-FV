FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      setExprFieldsDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //


expressions
(
    U
    {
        field       U;
        dimensions      [0 1 -1 0 0 0 0];

        condition
        #{
            // left half [0,1] of the domain [0,2]
            (pos().x() < 1)
        #};

        expression
        #{
            vector(1 + 0.5 * (sin(2 * pi() * pos().x() - pi() / 2) +1), 0, 0)
        #};
    }
);


